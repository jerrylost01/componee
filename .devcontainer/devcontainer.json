// .devcontainer/devcontainer.json
{
  "name": "Lightweight VNC Desktop",
  // We are switching to a much smaller base image to save space
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "codespace", // Your VNC password
      "webPort": "6080"
    }
  },

  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "Desktop (Web)"
    }
  },

  // This command to install ngrok is still correct
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y wget && wget https://bin.equinox.io/c/bNyj1mQVY4c/ngrok-v3-stable-linux-amd64.tgz -O ngrok.tgz && sudo tar -xvzf ngrok.tgz -C /usr/local/bin && ngrok config add-authtoken $NGROK_AUTHTOKEN"
}
